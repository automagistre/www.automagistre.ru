{% extends 'layout.html.twig' %}

{% set brand = app.request.attributes.get('brand')|capitalize %}
{% set PAGE_ID = brand|lower ~ '_'~'maintenance' %}
{% block title %}
    <title>Калькулятор ТО {{ brand }} в Москве</title>
{% endblock %}

{% block meta_seo %}
    <meta name="keywords" content="автосервис в Москве, авторемонт, диагностика, техническое обслуживание, ТО, {{ brand }}, калькулятор ТО, стоимость ремонта">
    <meta name="description" content="Полный расчет стоимости технического обслуживания (ТО) {{ brand }}">
{% endblock %}

{% block meta_og %}
    <meta property="og:title" content="Калькулятор ТО {{ brand }} Онлайн">
    <meta property="og:description" content="Запишитесь на техническое обслуживание всего за 60 секунд!. Все запчасти в наличии">
{% endblock %}

{% from '_sections/chunks/features_items.twig' import renderFeatures %}
{% set features = ['star', 'speed', 'search', 'binocul'] %}

{% block content %}
    <main class="site-main">

        <section class="sec-intro">
            <div class="sec-intro__back back__maintenance"></div>
            <div class="sec-intro__front">
                <div class="container">
                    <a class="sec-intro__type" href="{{ path('service') }}">Назад</a>
                    <h1 class="sec-intro__title">ТО автомобилей модели <br> {{ brand }}</h1>
                    <a class="btn sec-intro__btn js-scroll-to" data-scrollto="#costing" role="button">К калькулятору</a>

                    {{ renderFeatures(features, "sec-intro__features") }}

                </div>
            </div>
        </section>

        {{ include('_sections/costing.html.twig') }}

        {{ include('_sections/experience.html.twig') }}

        {{ include('_sections/master.html.twig') }}

        {{ include('_sections/reviews.html.twig') }}

        {{ include('_sections/clubs.html.twig') }}

        {{ include('_sections/faq.html.twig') }}

        {{ include('_sections/map_small.html.twig') }}

    </main>
{% endblock %}
