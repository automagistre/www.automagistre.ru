{% extends 'layout.html.twig' %}
{% from '_sections/chunks/forms.twig' import formSubscribe %}
{% set features = [
    {
        "icon": "icon-f_suspension",
        "title": "Не обязываем <br> к ремонту",
        "note": "Полностью бесплатная диагностика и калькуляция работ. А когда и где ремонтировать - решать вам.",
    },{
        "icon": "icon-f_speed",
        "title": "Управимся <br> за 40 минут",
        "note": "Фирменная диагностика более чем по 70 пунктам в кротчайшие сроки",
    },{
        "icon": "icon-f_piggy",
        "title": "Цены неизменны <br> год за годом",
        "note": "Цены на работы действительны в течение года",
    },{
        "icon": "icon-f_binocul",
        "title": "Наблюдайте <br> за работой",
        "note": "У нас свободный доступ в ремзону, все найденные недостатки будут продемонстрированы. Но не забывайте про технику безопасности",
    }
] %}

{% set brand = app.request.attributes.get('brand')|capitalize %}

{% block content %}
    <main class="site-main">
        <section class="sec-intro">
            <div class="sec-intro__back" style="background-image: url({{ asset('img/backgrounds/bg_diagnostics-free.jpg') }})"></div>
            <div class="sec-intro__front">
                <div class="container">
                    <h1 class="sec-intro__title">Бесплатная диагностика <br> {{ brand }} в Москве</h1>

                    {{ formSubscribe('sec-intro__form') }}

                    <ul class="sec-intro__features">
                        {% for feature in features %}
                            <li class="feature sec-intro__feature">
                                <i class="feature__icon {{ feature.icon }}"></i>
                                <h3 class="feature__title">{{ feature.title | raw }}</h3>
                                <div class="feature__note">{{ feature.note | raw }}</div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </section><!-- END sec-intro -->

        {{ include('_sections/features_diag_free.html.twig') }}

        {{ include('_sections/experience.html.twig') }}

        {{ include('_sections/master.html.twig') }}

        {{ render(controller('App\\Controller\\Service\\ReviewsController::section', {'brand': app.request.attributes.get('brand')})) }}

        {{ include('_sections/clubs.html.twig') }}

        {{ render(controller('App\\Controller\\Service\\FaqController::__invoke', {'brand': app.request.attributes.get('brand')}, {'scroll': true})) }}

        {{ include('_sections/map.html.twig') }}
    </main><!-- END site-main -->
{% endblock %}
