{% extends 'layout.html.twig' %}
{% from '_sections/chunks/forms.twig' import formSubscribe %}

{% from '_sections/chunks/features_items.twig' import renderFeatures %}

{% set features = ['suspension', 'speed', 'piggy', 'binocul'] %}

{% set brand = app.request.attributes.get('brand')|capitalize %}

{% block title %}
    <title>Ремонт {{ brand }} в Москве</title>
{% endblock %}

{% block meta_seo %}
    <meta name="keywords" content="автосервис в Москве, авторемонт, ремонт, {{ brand }}">
    <meta name="description" content="Полный спектр технического обслуживания и ремонта автомобилей {{ brand }}">
{% endblock %}

{% block meta_og %}
    <meta property="og:title" content="Полный спектр услуг по ремонту {{ brand }} в Москве">
    <meta property="og:description" content="Сервисный центр Автомагистр окажет помощь в проведении ремонта {{ brand}} любой сложности">
{% endblock %}

{% block content %}

    <main class="site-main">

        <section class="sec-intro">
            <div class="sec-intro__back back__repair lazy"></div>
            <div class="sec-intro__front">
                <div class="container">
                    <h1 class="sec-intro__title">Ремонт и обслуживание<br>{{ brand }} в Москве</h1>
{#                    <a class="btn sec-intro__btn js-scroll-to" data-scrollto="#sec-offer-slider" role="button">К прайс-листу</a>#}
                    {{ formSubscribe('sec-intro__form', 'schedule') }}

                    {{ renderFeatures(features, "sec-intro__features") }}
                </div>
            </div>
        </section>

        {{ include('_sections/work.html.twig') }}

        {{ include('_sections/happen.html.twig') }}

        {{ include('_sections/master.html.twig') }}

        {{ include('_sections/reviews.html.twig') }}

        {{ include('_sections/clubs.html.twig') }}

        {{ include('_sections/faq.html.twig') }}

        {{ include('_sections/map_small.html.twig') }}
    </main>
{% endblock %}

