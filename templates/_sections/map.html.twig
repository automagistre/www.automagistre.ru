{% set brand = app.request.attributes.get('brand')|capitalize %}

<section class="sec-map">
    <div class="sec-map__back js-map-here"
         id="section-map"
         data-point='{"lat": 55.717483, "lng": 37.720718, "name": "Автомагистр - автосервис в Москве, магазин автозапчастей"}'>
    </div>
    <div class="sec-map__front">
        <div class="container">
            <div class="sec-map__pannel">
                <h1 class="sec-map__title">Контакты</h1>
                <div class="sec-map__info">
                    <h4 class="sec-map__info-title">Клубный автосервис {{ brand }}</h4>
                    <div class="sec-map__info-text">
                        г. Москва, Остаповский проезд, д.17 <br>
                        (м. Волгоградский проспект, м. Текстильщики)
                    </div>
                </div>
                <div class="sec-map__route">
                    <a class="sec-map__route-btn lazy" role="button">
                        Схема проезда
                    </a>
                    <a class="sec-map__route-navigator is-hidden" href="yandexnavi://map_search?text=Автомагистр"></a>
                </div>

                <div class="sec-map__info">
                    <h4 class="sec-map__info-title">Телефон:</h4>
                    <div class="sec-map__info-text">
                        <a href="tel:+74959848182">+7 (495) 984 8182</a> Многоканальный<br>
                    </div>
                </div>
                <div class="sec-map__info">
                    <h4 class="sec-map__info-title">График работы:</h4>
                    <div class="sec-map__info-text">
                        C 10-00 до 23-00 без выходных. <br>
                        После 21-00 автомобили принимаются <br>
                        по предварительной записи.
                    </div>
                </div>
                <a class="sec-map__link" onclick="window.open('{{ asset('img/sec-map/automagistre_print_map.pdf') }}')" role="button">Напечатать</a>
                <div class="sec-map__more">
                    <a class="btn sec-map__more-btn" role="button">Позвоните мне</a>
                </div>
            </div>
        </div>
    </div>
</section>
