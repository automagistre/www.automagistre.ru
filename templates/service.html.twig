{% extends 'layout.html.twig' %}

{#Panels data#}
{% set panels = [{
    'num': '01',
    'class': 'sec-intro__testing',
    'title': 'Диагностика',
    'note': 'Полная диагностика автомобиля по 85 пунктам. Наша задача обеспечить вашу безопасность
                        и исправность автомобиля, поэтому диагностика в нашем ТехЦентре бесплатная',
    'path': path('diagnostics', {'type': 'free'})
    },{
    'num': '02',
    'class': 'sec-intro__service',
    'title': 'Техническое <br> обслуживание',
    'note': 'Своевременное Техническое обслуживание(ТО) с использованием качественных расходных материалов
                        залог долгой и беспроблемной эксплуатации автомобиля.',
    'path': path('maintenance')
    },{
    'num': '03',
    'class': 'sec-intro__repair',
    'title': 'Ремонт',
    'note': 'Качественный, профессиональный ремонт любой сложности с использованием запчастей проверенных брендов.',
    'path': path('repair')
}] %}

{% block content %}
    <main class="site-main">
    <section class="sec-intro has-panels js-sec-scroll">
        <div class="sec-intro__panels">
            {% for panel in panels %}
                <div class="panel sec-intro__panel {{ panel.class }}">
                    <div class="panel__back"></div>
                    <div class="panel__info">
                        <div class="panel__num">{{ panel.num }}</div>
                        <h2 class="panel__title">{{ panel.title | raw }}</h2>
                        <div class="panel__note">{{ panel.note | raw }}</div>
                        <div class="panel__more">
                            <a class="panel__btn panel__btn_red" href="{{ panel.path }}">Подробнее</a>
                            <!--a class="panel__btn panel__btn_clear" href="#">Записаться</a-->
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section><!-- END sec-intro -->

    {{ include('./_sections/features.html.twig')  }}
    {{ include('./_sections/gallery.html.twig') }}
    {{ include('./_sections/services.html.twig') }}
    {{ include('./_sections/work.html.twig') }}
    {{ include('./_sections/expert.html.twig') }}

    {{ render(controller('App\\Controller\\Service\\FaqController::__invoke', {'brand': app.request.attributes.get('brand')}, {'scroll': true})) }}

    <section class="sec-map js-sec-scroll">
        <div class="sec-map__back js-map-here"
             id="section-map"
             data-point='{"lat": 55.717483, "lng": 37.720718, "name": "Автомагистр - автосервис в Москве, магазин автозапчастей"}'>
        </div>
        <div class="sec-map__front">
            <div class="container">
                <div class="sec-map__pannel">
                    <div class="sec-map__info">
                        <h4 class="sec-map__info-text">
                            г. Москва , Остаповский проезд, дом 17 <br>
                            (м.Волгоградский проспект, м.Текстильщики)
                        </h4>
                    </div>
                    <a class="sec-map__link" role="button">Схема проезда</a>
                    <div class="sec-map__more">
                        <a class="btn btn_arrow-rt sec-map__more-btn" href="{{ path('contacts') }}">Контакты</a>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- END sec-map -->
    </main>
{% endblock %}
